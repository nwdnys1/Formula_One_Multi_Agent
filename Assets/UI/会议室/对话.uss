.root {
    width: 100%;
    height: 100%;
}

.dialog-container {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 30%;
    background-color: rgba(0, 0, 0, 0.7);
    border-top: 2px solid rgb(74, 74, 74);
    padding: 20px;
    flex-direction: column;
}

.character-name {
    color: rgb(248, 229, 140);
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
}

.dialogue-text {
    color: white;
    font-size: 20px;
    white-space: normal;
    flex-grow: 1;
    overflow: hidden;
}

.input-container {
    flex-direction: row;
    margin-top: 15px;
    align-items: center;
}

.player-input {
    flex-grow: 1;
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgb(74, 74, 74);
    padding: 8px;
    font-size: 16px;
}

.submit-button {
    background-color: rgb(74, 144, 226);
    color: white;
    padding: 8px 16px;
    margin-left: 10px;
    border-radius: 4px;
}

.submit-button:hover {
    background-color: rgb(58, 123, 200);
}

.continue-hint {
    position: absolute;
    bottom: 10px;
    right: 20px;
    width: 20px;
    height: 20px;
    background-image: url('absolute');
    animation: bounce 1s infinite;
}

.root {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.7);
}

.dialogue-text {
    color: white;
    font-size: 18px;
    margin-bottom: 10px;
    white-space: normal;
}

.input-field {
    width: 100%;
    margin-top: 10px;
}

.options-container {
    flex-direction: column;
    margin-top: 10px;
}

Button {
    background-color: rgb(51, 51, 51);
    color: white;
    padding: 8px;
    margin-bottom: 5px;
    border: 1px solid rgb(85, 85, 85);
}

Button:hover {
    background-color: rgb(68, 68, 68);
}
