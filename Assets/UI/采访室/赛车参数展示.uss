.root {
    background-color: rgb(30, 30, 30);
    padding: 20px;
    width: 100%;
    height: 100%;
}

.header {
    font-size: 24px;
    color: white;
    margin-bottom: 20px;
    text-align: center;
    font-weight: bold;
}

.section {
    background-color: rgb(40, 40, 40);
    border-radius: 5px;
    padding: 15px;
    margin-bottom: 20px;
}

.section-header {
    font-size: 18px;
    color: rgb(76, 175, 80);
    margin-bottom: 10px;
    font-weight: bold;
}

.parameter-row {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.parameter-label {
    color: rgb(200, 200, 200);
    font-size: 14px;
    min-width: 150px;
}

.parameter-value {
    color: white;
    font-size: 14px;
    text-align: right;
}

Slider {
    flex-grow: 1;
    margin-left: 10px;
    margin-right: 10px;
}

.apply-button {
    background-color: rgb(76, 175, 80);
    color: white;
    padding: 8px 16px;
    margin-top: 15px;
    margin-bottom: 15px;
    border-radius: 4px;
    align-self: center;
}

.apply-button:hover {
    background-color: rgb(69, 160, 73);
}

.setup-results {
    background-color: rgb(50, 50, 50);
    border-radius: 5px;
    padding: 10px;
    margin-top: 10px;
}

